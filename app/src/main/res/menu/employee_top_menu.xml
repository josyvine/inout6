<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Allows the employee to update their Name, Phone, or Photo -->
    <item
        android:id="@+id/action_edit_profile"
        android:title="Edit Profile"
        app:showAsAction="never" />

    <!-- NEW: Medical Leave Action -->
    <!-- Used to request permission for medical absence -->
    <item
        android:id="@+id/action_medical_leave"
        android:title="Medical Leave"
        android:icon="@android:drawable/ic_menu_agenda"
        app:showAsAction="never" />

    <!-- NEW: Resume Action -->
    <!-- Used to enable check-in for rejoining or late starts -->
    <item
        android:id="@+id/action_resume"
        android:title="Resume"
        android:icon="@android:drawable/ic_menu_revert"
        app:showAsAction="never" />

    <!-- Emergency Leave Action -->
    <!-- This is enabled only after check-in and before check-out -->
    <item
        android:id="@+id/action_emergency_leave"
        android:title="Emergency Leave"
        android:icon="@android:drawable/ic_menu_today"
        app:showAsAction="never" />

    <!-- Standard Logout action -->
    <item
        android:id="@+id/action_logout"
        android:title="Logout"
        app:showAsAction="never" />

</menu>